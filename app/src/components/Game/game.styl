@require "app/styles/charte"

#game{
  width: 552px;
  display: flex;
  flex-wrap: wrap;
  margin: 6em auto;
}

.tile, #game{
  // border: 1px solid black;
}

.tile, .forest, .tree, .unknown, .water, .door{
  width: 50px;
  height: 50px
}

.forest
  background-image: url(/images/environement/grounds/grass_1.png);
  background-size: cover;
  image-rendering: pixelated

.tree{
  background-image: url(/images/trees/bush.png);
  background-size: cover;
  image-rendering: pixelated
}

.unknown{
  background-image: url(/images/environement/Walls/cave_6.png)
  background-size: cover;
  image-rendering: pixelated
}

.unknownTop{
  background-image: url(/images/environement/Walls/fence_2.png)
  background-size: cover;
  image-rendering: pixelated
}

.unknownBottom{
  background-image: url(/images/environement/Walls/cave_8.png)
  background-size: cover;
  image-rendering: pixelated
}

.unknownLeft{
  background-image: url(/images/environement/Walls/cave_4.png)
  background-size: cover;
  image-rendering: pixelated
}

.water{
  background-image: url(/images/environement/Walls/water_2.png);
  background-size: cover;
  image-rendering: pixelated
}
.door{
  background-image: url(/images/environement/Walls/cave_entry.png)
  background-size: cover;
  transform: rotate(90deg);
  image-rendering: pixelated

}

// a mettre a jour hero doit etre un ID
#hero{
  background-color: yellow;
}

.hero{
  position: relative;
}

  &.right{
  background-color: red;


}
    &.right:after{
      content: "right";
      color: blue;
      margin: auto;

    }

  &.left{
  background-color: orange;
}
    &.left:after{
      content: "left";
      color: green;
      margin: auto;
    }

  &.up{
  background-color: black;
}
    &.up:after{
      content: "up";
      color: white;
      margin: auto;
    }

  &.down{
  background-color: white;
}
    &.down:after{
      content: ''
      height: 100%
      width: 100%
      background-image: url(/images/hero/hero.png)
      background-position: 0 -15px
      color: black;
      margin: auto;
    }
