@require "app/styles/charte"

#boardGame
  margin: 4em

#game{
  width: 552px;
  display: flex;
  flex-wrap: wrap;
  margin: auto
}

.tile, #game{
  // border: 1px solid black;
}

.tile, .forest, .tree, .unknown, .water, .door, .lever{
  width: 50px;
  height: 50px
}

.forest
  background-image: url(/images/environement/grounds/grass_4.png);
  background-size: cover;
  image-rendering: pixelated

.tree{
  background-image: url(/images/trees/bush.png);
  background-size: cover;
  image-rendering: pixelated
}

.unknownRight{
  background-image: url(/images/environement/Walls/cave_6.png)
  background-size: cover;
  image-rendering: pixelated
}

.unknownTop{
  background-image: url(/images/environement/Walls/fence_2.png)
  background-size: cover;
  image-rendering: pixelated
}

.unknownBottom{
  background-image: url(/images/environement/Walls/cave_8.png)
  background-size: cover;
  image-rendering: pixelated
}

.unknownLeft{
  background-image: url(/images/environement/Walls/cave_4.png)
  background-size: cover;
  image-rendering: pixelated
}

.water{
  background-image: url(/images/environement/Walls/water_2.png);
  background-size: cover;
  image-rendering: pixelated
}
.door{
  background-image: url(/images/environement/Walls/cave_entry.png)
  background-size: cover;
  transform: rotate(90deg);
  image-rendering: pixelated
}
  .door:after
    transform: rotate(-90deg)

.lever-off{
  background-color: red;
  background-size: cover;
}
  .lever-off:after
    content:'off'
    width: 100%

.lever-on{
  background-color: blue;
  background-size: cover;
}
  .lever-on:after
    content:'on'
    width: 100%

// a mettre a jour hero doit etre un ID
#hero{
  background-color: yellow;
}

.hero{
  position: relative;
}

  &.right{
  background-color: red;


}
    &.right:after{
      content: ''
      height: 100%
      width: 100%
      background-image: url(/images/hero/hero.png)
      background-position: 0px 50px
      color: black;
      margin: auto;
    }

  &.left{
  background-color: orange;
}
    &.left:after{
      content: ''
      height: 100%
      width: 100%
      background-image: url(/images/hero/hero.png)
      background-position: 55px 180px
      color: black;
      margin: auto;
    }

  &.up{
  background-color: black;
}
    &.up:after{
      content: ''
      height: 100%
      width: 100%
      background-image: url(/images/hero/hero.png)
      background-position: 185px 244px
      color: black;
      margin: auto;
    }

  &.down{
  background-color: white;
}
    &.down:after{
      content: ''
      height: 100%
      width: 100%
      background-image: url(/images/hero/hero.png)
      background-position: 185px 115px
      color: black;
      margin: auto;
    }
