@require "app/styles/charte"


#app
  background-image: url(/img-interface/imageHome.jpg)
  background-size: cover
  background-repeat: no-repeat

#home
  margin: 3em


#intro
  text-align: center

#mainTitle
  font-family: 'ArmyRangers'
  text-transform: lowercase
  color: $mainColor
  font-size: 6.7em
  margin: 1em 1em
  font-weight: bold
  animation-duration: 2s
  animation-delay: 0.5s
  text-shadow: 0 0 30px black


#subtitle
  text-transform: uppercase
  color: $mainColor
  font-size: 2.7em
  font-weight: bold
  text-shadow: 0 0 20px black

#spitch
  width: 50%
  background-color: $mainColor
  margin: 2.5em auto
  padding: 1em
  border-radius: 4px
  box-shadow: 2px 6px 15px

#spitch-text
  font-size 1.3em
  text-align: center

#spitch-text strong
    text-transform: uppercase
